{
  "name": "meshtastic-powered-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache"
  },
  "dependencies": {
    "@meshtastic/core": "link:../core",
    "@meshtastic/protobufs": "link:../protobufs",
    "@meshtastic/transport-http": "link:../transport-http",
    "@meshtastic/transport-web-bluetooth": "link:../transport-web-bluetooth",
    "@meshtastic/transport-web-serial": "link:../transport-web-serial",
    "@noble/curves": "^2.0.1",
    "@primeuix/themes": "^2.0.2",
    "@primevue/core": "^4.5.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/w3c-web-serial": "npm:@types/w3c-web-serial@^1.0.7",
    "@types/web-bluetooth": "npm:@types/web-bluetooth@^0.0.20",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vueuse/core": "^14.1.0",
    "base64-js": "^1.5.1",
    "humanize-duration": "^3.33.2",
    "idb": "^8.0.3",
    "lucide-vue-next": "^0.562.0",
    "primevue": "^4.5.4",
    "rfc4648": "^1.5.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-primeui": "^0.6.1",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/humanize-duration": "^3.27.4",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "~10.5.1",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.0",
    "vite": "^7.2.4",
    "vite-plugin-unused-code": "^0.1.6",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.1.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "rules": {
      "vue/multi-word-component-names": "off",
      "no-undef": "off",
      "no-prototype-builtins": "off",
      "no-cond-assign": "off",
      "no-unused-vars": "off",
      "no-empty": "off",
      "no-explicit-any": "off"
    }
  }
}
